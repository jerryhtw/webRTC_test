doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
        style.
            /* Custom styles for video containers */
            #call {
                display: none;
            }
            .video-container {
                display: block;
                width: 100%;
                max-width: 500px;
                margin: 20px auto;
                border-radius: 10px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                overflow: hidden;
                background-color: #000;
            }
            .video-container video {
                width: 100%;
                height: auto;
                border-radius: 10px;
            }
            .controls-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 15px;
                margin-top: 10px;
            }
            /* Improved Button Design */
            .controls-container button, .controls-container select {
                background: linear-gradient(145deg, #6e7fdb, #4e5cb8);
                color: white;
                border: none;
                padding: 12px 20px;
                font-size: 16px;
                border-radius: 30px;
                cursor: pointer;
                transition: all 0.3s ease;
                box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
            }
            /* Button hover effects */
            .controls-container button:hover {
                background: linear-gradient(145deg, #4e5cb8, #6e7fdb);
                transform: translateY(-2px);
                box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.3);
            }
            .controls-container select {
                background-color: #ffffff;
                color: #333;
                border-radius: 20px;
                padding: 10px 15px;
                font-size: 14px;
                cursor: pointer;
                border: 1px solid #ccc;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }
            .controls-container select:hover {
                border-color: #4e5cb8;
            }
            /* Flexbox for horizontal layout of videos */
            .video-layout {
                display: flex;
                justify-content: center;
                gap: 40px; /* Space between videos */
                padding: 20px;
                flex-wrap: wrap;
            }
            .room-name {
                text-align: center;
                font-size: 24px;
                font-weight: bold;
                margin-top: 20px;
            }
    body
        header(class="bg-blue-600 p-4 text-white text-center")
            h1 Ryan Chat
        main(class="p-4")
            div#welcome(class="text-center")
                form#roomForm
                    input#roomNameInput(placeholder="Enter room name", required, type="text", class="border p-2 rounded")
                    button(type="submit", class="mt-4 bg-blue-500 text-white py-2 px-4 rounded") Enter room
            div#call(class="mt-4 text-center hidden")
                p.room-name Room: <span id="roomName">N/A</span>
                div.video-layout
                    div#myStream(class="video-container")
                        video#myFace(autoplay, playsinline)
                        div.controls-container
                            button#mute Mute
                            button#camera Turn Camera off
                            select#cameras
                    div#peerStream(class="video-container")
                        video#peerFace(autoplay, playsinline)
                        div.controls-container
                            button#mute Peer Mute
                            button#camera Peer Turn Camera off
                            select#cameras

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")
